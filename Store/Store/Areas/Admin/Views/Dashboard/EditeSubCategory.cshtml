@model Store.Areas.Admin.Models.ViewModels.SubCategoryEditedVM
@inject Store.Models.IService.Admin.IProductService _pservice
@{
    ViewData["Title"] = "EditeSubCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var Category = _pservice.GetCategories();
    var mainCategory = _pservice.GetMainCategories();
}

<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    ویرایش زیر دسته 
                </div>
                <div class="panel-body">
                    <form asp-action="EditeSubCategory">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="SubCategoryId" value="@Model.SubCategoryId" />
                        <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <select class="form-control" asp-for="MainCategoryId" asp-items="@(new SelectList(_pservice.GetMainCategories(),"MainCategoryId","Name"))">
                                <option value="@Model.MainCategoryId"> @mainCategory.Where(c => c.MainCategoryId == (Category.Where(d => d.CategoryId == Model.CategoryId).Select(x => x.MainCategoryId).First())).Select(c => c.Name).First()</option>
                            </select>
                            <span asp-validation-for="MainCategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(string.Empty,"CategoryId","Name"))">
                                <option value="@Model.CategoryId">@Category.Where(c => c.CategoryId == Model.CategoryId).Select(x => x.Name).First()</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <input asp-for="Name" class="form-control" placeholder="نام زیر دسته" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <input asp-for="EName" class="form-control" placeholder="نام انگلیسی" />
                            <span asp-validation-for="EName" class="text-danger"></span>
                        </div>
                        <div class="row">

                            <div class="form-group col-lg-2 col-md-2 col-sm-2 col-xs-12 pull-left">
                                <input asp-for="OrderNumber" class="form-control" placeholder="شماره اولویت" />
                                <span asp-validation-for="OrderNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group col-lg-7 col-md-7 col-sm-7 col-xs-12">
                                <textarea asp-for="Description" class="form-control" placeholder="توضیحات"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check pull-right">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                </label>
                            </div>
                        </div>
                        <div class="form-group ">
                            <input type="submit" value="ویرایش زیر دسته" class="btn btn-primary pull-right" />
                            &nbsp;
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="SubCategory" class="btn btn-info pull-left" style="color:black">برگشت</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>


        $(function (){
            $("#MainCategoryId").change(function () {
                var maincatid = $("#MainCategoryId").val();
                var url = '@Url.Action("GetCategoriesByMainCategoryId", "Dashboard")';
                $.getJSON(url, { id: maincatid }, function (data) {
                    var items = '';
                    $("#CategoryId").empty();
                    $.each(data, function (i,row) {

                        items += " <option value='"+row.value+"'>"+row.text+"</option>";
                    });
                    $("#CategoryId").html(items);
                });
            });

        });
    </script>
}
