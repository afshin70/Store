@model Store.Areas.Admin.Models.ViewModels.BrandAddVM
@inject Store.Models.IService.Admin.IProductService _pservice
@{
    ViewData["Title"] = "Brand";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var brands = _pservice.GetAllBrands();
    int row = 1;
}

<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-green">
                <div class="panel-heading">
                    افزودن برند جدید
                </div>
                <div class="panel-body">
                    <form id="form" asp-action="Brand" method="post" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" value="" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="EName" class="control-label"></label>
                                <input asp-for="EName" value="" class="form-control" />
                                <span asp-validation-for="EName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="افزودن برند" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    لیست برند ها
                </div>
                <div class="panel-body">
                    <button onclick="Refresh()" class=" btn-xs btn-warning pull-right" style="color:black">تازه سازی صفحه</button>
                    <div class="col-md-12">

                        @if (brands.Any())
                        {
                            <table class="table table-striped table-responsive table-hover dataTable no-footer">
                                <thead>
                                    <tr style="color:black;font-weight:bold">
                                        <td>
                                            ردیف
                                        </td>
                                        <td>
                                            نام برند
                                        </td>
                                        <td>
                                            نام انگلیسی
                                        </td>
                                        <td>
                                            در حال استفاده برای محصول
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in brands)
                                    {
                                        <tr row-id="@item.BrandId">
                                            <td>
                                                @(row++)
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.EName
                                            </td>
                                            <td>
                                                @if (_pservice.IsUseageByProduct(item.BrandId))
                                                {
                                                    <p>بله</p>
                                                }
                                                else
                                                {
                                                    <p>خیر</p>
                                                }
                                            </td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="Dashboard" asp-action="EditeBrand" asp-route-id="@item.BrandId" class="btnedite"><i class="fa fa-edit " style='font-size:20px'></i></a> |
                                                <a class="btndelete" id="@item.BrandId"><i class="fa fa-trash" style='font-size:20px;color:rgb(255, 26, 26)'></i></a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
         $(document).ready(function () {
        $(".btndelete").click(function () {
            var id = $(this).attr('id');
           //---------------------

            $.confirm({
                title: 'هشدار',
                content: 'آیا از حذف مطمعن هستید؟',
                autoClose: 'انصراف|15000',

                buttons: {
                    deleteUser: {
                        text: 'تایید',
                        action: function () {
                           $.ajax({
                                        type: "POST",
                                        url: '@Url.Action("DeleteBrand", "Dashboard")',
                               data: { brand_id:id },
                                        dataType: "Json",
                               success: function (result) {
                                   if (result === true) {
                                       $("tr[row-id='" + id + "']").fadeOut();
                                       //window.location.reload();
                                   } else {
                                       $.alert("بنا به دلایلی حذف انجام نشد");
                                   }
                               },
                               error: function ()
                               {
                                          $.alert("خطایی رخ داده است. مجددا تلاش کنید!");
                               }
                           });
                        }
                    },
                    انصراف: function () {

                    }
                }
            });
            //------------------
                    });
        });


        function Refresh() {
            window.location.reload();

        }

    </script>
}
