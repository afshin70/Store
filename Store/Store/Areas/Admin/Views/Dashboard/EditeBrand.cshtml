@model Store.Areas.Admin.Models.ViewModels.BrandEditedVM

@{
    ViewData["Title"] = "EditeBrand";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    ویرایش زیر دسته
                </div>
                <div class="panel-body">
                    <form asp-action="EditeBrand">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">

                            <input type="hidden" asp-for="BrandId" class="form-control" />

                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="EName" class="control-label"></label>
                                <input asp-for="EName" class="form-control" />
                                <span asp-validation-for="EName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group ">
                            <input type="submit" value="ویرایش برند" class="btn btn-primary pull-right" />
                            &nbsp;
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Brand" class="btn btn-info pull-left" style="color:black">برگشت</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
