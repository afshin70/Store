@model Store.Areas.Admin.Models.ViewModels.CategoryEditedVM
@inject Store.Models.IService.Admin.IProductService _pservice
@{
    ViewData["Title"] = "EditeCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var maincategory = _pservice.GetMainCategories();
}



<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    ویرایش دسته فرعی
                </div>
                <div class="panel-body">
                    <form asp-action="EditeCategory">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CategoryId" class="form-control" />
                        <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <select class="form-control" asp-for="MainCategoryId" asp-items="@(new SelectList(_pservice.GetMainCategories(),"MainCategoryId","Name"))">
                                <option value="@Model.MainCategoryId">
                                    @maincategory.Where(c => c.MainCategoryId == Model.MainCategoryId).Select(c => c.Name).First()
                                </option>
                            </select>
                            <span asp-validation-for="MainCategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <input asp-for="Name" class="form-control" placeholder="نام" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div><div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <input asp-for="EName" class="form-control" placeholder="نام انگلیسی" />
                            <span asp-validation-for="EName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-2 col-md-2 col-sm-2 col-xs-12">
                            <input asp-for="OrderNumber" class="form-control" placeholder="شماره اولویت" />
                            <span asp-validation-for="OrderNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-7 col-md-7 col-sm-7 col-xs-12">
                            <textarea asp-for="Description" class="form-control" placeholder="توضیحات"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                            &nbsp;
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsFavorate" /> @Html.DisplayNameFor(model => model.IsFavorate)
                            </label>
                        </div>
                        <br />
                        <br />
                        <div class="form-group ">
                            <input type="submit" value="ویرایش دسته فرعی" class="btn btn-primary pull-right" />
                            &nbsp;
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Category" class="btn btn-info pull-left" style="color:black">برگشت</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
