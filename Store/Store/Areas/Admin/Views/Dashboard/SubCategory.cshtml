@model Store.Areas.Admin.Models.ViewModels.SubCategoryAddVM
@inject Store.Models.IService.Admin.IProductService _pservice
@{
    ViewData["Title"] = "SubCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var subCategory = _pservice.GetSubCatrgories();
    var Category = _pservice.GetCategories();
    var mainCategory = _pservice.GetMainCategories();
    int row = 1;
}

<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-green">
                <div class="panel-heading">
                    افزودن زیر دسته جدید
                </div>
                <div class="panel-body">
                    <form id="form" asp-action="SubCategory">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <select class="form-control" asp-for="MainCategoryId" asp-items="@(new SelectList(_pservice.GetMainCategories(),"MainCategoryId","Name"))">
                                    <option value="">انتخاب دسته اصلی</option>
                                </select>
                                <span asp-validation-for="MainCategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(string.Empty,"CategoryId","Name"))">
                                    <option value="">انتخاب دسته فرعی</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <input asp-for="Name" class="form-control" placeholder="نام زیر دسته" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <input asp-for="EName" class="form-control" placeholder="نام انگلیسی" />
                                <span asp-validation-for="EName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">

                            <div class="form-group col-lg-2 col-md-2 col-sm-2 col-xs-12 pull-left">
                                <input asp-for="OrderNumber" class="form-control" placeholder="شماره اولویت" />
                                <span asp-validation-for="OrderNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group col-lg-7 col-md-7 col-sm-7 col-xs-12">
                                <textarea asp-for="Description" class="form-control" placeholder="توضیحات"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check pull-right">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                </label>
                            </div>
                        </div>
                        <div class="form-group pull-right">
                            <input type="submit" value="افزودن دسته" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    لیست دسته ها
                </div>
                <div class="panel-body">
                    <button onclick="Refresh()" class=" btn-xs btn-warning pull-right" style="color:black">تازه سازی صفحه</button>
                    <div class="col-md-12">

                        @if (subCategory.Any())
                        {
                            <table class="table table-striped table-responsive table-hover dataTable no-footer">
                                <thead>
                                    <tr style="color:black;font-weight:bold">
                                        <td>
                                            ردیف
                                        </td>
                                        <td>
                                            نام زیر دسته
                                        </td>
                                        <td>
                                            نام دسته فرعی
                                        </td>
                                        <td>
                                            نام دسته اصلی
                                        </td>

                                        <td>
                                            نام انگلیسی دسته
                                        </td>
                                        <td>
                                            وضعیت
                                        </td>
                                        <td>
                                            تنظیم اولویت
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in subCategory.OrderByDescending(x => x.OrderNumber))
                                    {
                                        <tr>
                                            <td>
                                                @(row++)
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @Category.Where(c => c.CategoryId == item.CategoryId).Select(x => x.Name).First()
                                            </td>
                                            <td>
                                                @mainCategory.Where(c => c.MainCategoryId == (Category.Where(d => d.CategoryId == item.CategoryId).Select(x => x.MainCategoryId).First())).Select(c => c.Name).First()
                                            </td>

                                            <td>
                                                @item.EName
                                            </td>
                                            <td>
                                                @(item.IsActive ? "درحال نمایش" : "غیر فعال")
                                            </td>
                                            <td>
                                                <i onclick="LevelDown(@item.SubCategoryId)" class='fas fa-arrow-alt-circle-down' style='font-size:25px'></i> &nbsp;
                                                <i class='badge product-card__badge--hot' style='font-size:20px'>@item.OrderNumber</i> &nbsp;
                                                <i onclick="LevelUp(@item.SubCategoryId)" class='fas fa-arrow-alt-circle-up' style='font-size:25px'></i>
                                            </td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="Dashboard" asp-action="EditeSubCategory" asp-route-id="@item.SubCategoryId" class="btnedite"><i class="fa fa-edit " style='font-size:20px'></i></a> |
                                                <a class="btndelete" id="@item.SubCategoryId"><i class="fa fa-trash" style='font-size:20px;color:rgb(255, 26, 26)'></i></a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

     
        $(function (){
            $("#MainCategoryId").change(function () {
                var maincatid = $("#MainCategoryId").val();
                var url = '@Url.Action("GetCategoriesByMainCategoryId", "Dashboard")';
                $.getJSON(url, { id: maincatid }, function (data) {
                    var items = '';
                    $("#CategoryId").empty();
                    $.each(data, function (i,row) {

                        items += " <option value='"+row.value+"'>"+row.text+"</option>";
                    });
                    $("#CategoryId").html(items);
                });
            });

        });
    </script>

    <script>
         function LevelUp(id) {
             $.ajax({
                                        type: "POST",
                                        url: '@Url.Action("LevelUpSubCategory", "Dashboard")',
                 data: { subCategory_id:id },
                                        dataType: "Json",
                               success: function (result) {
                                   if (result === true) {
                                       window.location.reload();

                                   }
                               },
                               error: function ()
                               {
                                          $.alert("خطایی رخ داده است. مجددا تلاش کنید!");
                               }
                           });
        }
        function LevelDown(id) {
            $.ajax({
                                        type: "POST",
                                        url: '@Url.Action("LevelDownSubCategory", "Dashboard")',
                data: { subCategory_id:id },
                                        dataType: "Json",
                               success: function (result) {
                                   if (result === true) {
                                       window.location.reload();

                                   }
                               },
                               error: function ()
                               {
                                          $.alert("خطایی رخ داده است. مجددا تلاش کنید!");
                               }
                           });
        }
        function Refresh() {
            window.location.reload();
         
        }

        $(document).ready(function () {
        $(".btndelete").click(function () {
            var id = $(this).attr('id');
           //---------------------

            $.confirm({
                title: 'هشدار',
                content: 'آیا از حذف مطمعن هستید؟',
                autoClose: 'انصراف|15000',

                buttons: {
                    deleteUser: {
                        text: 'تایید',
                        action: function () {
                           $.ajax({
                                        type: "POST",
                                        url: '@Url.Action("DeleteSubCategory", "Dashboard")',
                               data: { subCategory_id:id },
                                        dataType: "Json",
                               success: function (result) {
                                   if (result === true) {
                                       window.location.reload();

                                   } else {
                                       $.alert("بنا به دلایلی حذف انجام نشد");
                                   }
                               },
                               error: function ()
                               {
                                          $.alert("خطایی رخ داده است. مجددا تلاش کنید!");
                               }
                           });
                        }
                    },
                    انصراف: function () {

                    }
                }
            });
            //------------------
                    });
                });
    </script>
}
