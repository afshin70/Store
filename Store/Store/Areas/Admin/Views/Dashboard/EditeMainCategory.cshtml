@model Store.Areas.Admin.Models.ViewModels.MainCategoryEditedVM

@{
    ViewData["Title"] = "EditeMainCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    ویرایش دسته اصلی  
                </div>
                <div class="panel-body">
                    <form asp-action="EditeMainCategory" method="post">
                        <input type="hidden" asp-for="MainCategoryId" value="@Model.MainCategoryId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <input asp-for="Name" class="form-control" placeholder="نام دسته اصلی" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <input asp-for="EName" class="form-control" placeholder="نام انگلیسی دسته اصلی" />
                            <span asp-validation-for="EName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-4">
                            <input asp-for="OrderNumber" class="form-control" placeholder="شماره اولویت" />
                            <span asp-validation-for="OrderNumber" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group form-check ">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ویرایش دسته اصلی" class="btn btn-primary pull-right" />
                            &nbsp; 
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="MainCategory" class="btn btn-info pull-left" style="color:black">برگشت</a>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>

    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
