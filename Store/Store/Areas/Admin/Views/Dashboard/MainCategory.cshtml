@model Store.Areas.Admin.Models.ViewModels.MainCategoryAddVM
@inject Store.Models.IService.Admin.IProductService _pservice
@{
    ViewData["Title"] = "MainCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<Store.Models.DataBase.Entities.MainCategory> mainCatrgories = _pservice.GetMainCategories();
}
@section css{


}
<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-green">
                <div class="panel-heading">
                    افزودن دسته اصلی جدید
                </div>
                <div class="panel-body">
                    <form asp-action="MainCategory" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <input asp-for="Name" class="form-control" placeholder="نام دسته اصلی" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <input asp-for="EName" class="form-control" placeholder="نام انگلیسی دسته اصلی" />
                            <span asp-validation-for="EName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3 col-md-3 col-sm-3 col-xs-4">
                            <input asp-for="OrderNumber" class="form-control" placeholder="شماره اولویت" />
                            <span asp-validation-for="OrderNumber" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group form-check ">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ایجاد دسته اصلی" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    لیست دسته ها
                </div>
                <div class="panel-body">
                    <button onclick="Refresh()" class=" btn-xs btn-warning pull-right" style="color:black">تازه سازی صفحه</button>
                    <div class="col-md-12">

                        @if (mainCatrgories.Any())
                        {
                            <table class="table table-striped table-responsive table-hover dataTable no-footer">
                                <thead>
                                    <tr style="color:black;font-weight:bold">
                                        <td>
                                            ردیف
                                        </td>
                                        <td>
                                            نام دسته
                                        </td>
                                        <td>
                                            نام انگلیسی دسته
                                        </td>
                                        <td>
                                            وضعیت
                                        </td>
                                        <td>
                                            تنظیم اولویت
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in mainCatrgories.OrderByDescending(x => x.OrderNumber))
                                    {
                                        <tr>
                                            <td></td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.EName
                                            </td>
                                            <td>
                                                @(item.IsActive ? "درحال نمایش" : "غیر فعال")
                                            </td>
                                            <td>
                                                <i onclick="LevelDown(@item.MainCategoryId)" class='fas fa-arrow-alt-circle-down' style='font-size:25px'></i> &nbsp;
                                                <i class='badge product-card__badge--hot' style='font-size:20px'>@item.OrderNumber</i> &nbsp;
                                                <i onclick="LevelUp(@item.MainCategoryId)" class='fas fa-arrow-alt-circle-up' style='font-size:25px'></i>
                                            </td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="Dashboard" asp-action="EditeMainCategory" asp-route-id="@item.MainCategoryId" class="btnedite"><i class="fa fa-edit "style='font-size:20px'></i></a> |
                                                <a class="btndelete" id="@item.MainCategoryId"><i class="fa fa-trash" style='font-size:20px;color:rgb(255, 26, 26)'></i></a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        }

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        //$(".btnedite").click(function () {
        //    $('input[n=MainCategoryId]').val($(this).attr('id'));
        //    $('input[n=Name]').val($(this).attr('name'));
        //    $('input[n=EName]').val($(this).attr('ename'));
        //    $('input[n=IsActive]').val($(this).attr('isactive'));
        //    $('input[n=OrderNumber]').val($(this).attr('ordernumber'));
        //});
        function LevelUp(id) {
             $.ajax({
                                        type: "POST",
                                        url: '@Url.Action("LevelUp", "Dashboard")',
                                        data: { main_category_id:id },
                                        dataType: "Json",
                               success: function (result) {
                                   if (result === true) {
                                       window.location.reload();

                                   } 
                               },
                               error: function ()
                               {
                                          $.alert("خطایی رخ داده است. مجددا تلاش کنید!");
                               }
                           });
        }
        function LevelDown(id) {
            $.ajax({
                                        type: "POST",
                                        url: '@Url.Action("LevelDown", "Dashboard")',
                                        data: { main_category_id:id },
                                        dataType: "Json",
                               success: function (result) {
                                   if (result === true) {
                                       window.location.reload();

                                   } 
                               },
                               error: function ()
                               {
                                          $.alert("خطایی رخ داده است. مجددا تلاش کنید!");
                               }
                           });
        }
        function Refresh() {
            window.location.reload();
        }

    </script>

    <script>
                $(document).ready(function () {
        $(".btndelete").click(function () {
            var id = $(this).attr('id');
           //---------------------

            $.confirm({
                title: 'هشدار',
                content: 'آیا از حذف مطمعن هستید؟',
                autoClose: 'انصراف|15000',

                buttons: {
                    deleteUser: {
                        text: 'تایید',
                        action: function () {
                           $.ajax({
                                        type: "POST",
                                        url: '@Url.Action("DeleteMainCategory", "Dashboard")',
                                        data: { main_category_id:id },
                                        dataType: "Json",
                               success: function (result) {
                                   if (result === true) {
                                       window.location.reload();

                                   } else {
                                       $.alert("بنا به دلایلی حذف انجام نشد");
                                   }
                               },
                               error: function ()
                               {
                                          $.alert("خطایی رخ داده است. مجددا تلاش کنید!");
                               }
                           });
                        }
                    },
                    انصراف: function () {

                    }
                }
            });
            //------------------
                    });
                });
    </script>
}
